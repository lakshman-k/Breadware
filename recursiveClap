int counter2=0;
int i=0,j=0;



void recu()
{
    if(mic.read()>=90)
    {
        counter2++;
        if(counter2==7)
                return;
        delay(50);
        for(i=0;i<20;i++)
        {
            recu();
        }
        return;
        
    }
}




recu();

if(counter2!=0)
{
    Serial.print(counter2);
delay(2000);
counter2=0;
}
